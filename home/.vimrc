" 文件
set autoread
set autochdir
filetype on
filetype plugin on

" 命令
set nocompatible
set showcmd
set cmdheight=1  

" 行号
set number
set ruler

" 搜索
set noignorecase
set hlsearch
set incsearch

" 语法高亮
syntax on

" 自动补全
set wildmenu

" 缩进
filetype indent on
set autoindent
set smartindent
set smarttab
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2
set cindent
set cinoptions={0,1s,t0,n-2,p2s,(03s,=.5s,>1s,=1s,:1s
